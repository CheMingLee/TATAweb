<%= provide(:page_title, '浪，我幫你說') %>
<% provide(:home_active, 'active') %> 

<div class="container mt-5">
  <img src="images/banner_index.png" width="100%">
  <% if false %>
  <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="https://images2.imgbox.com/5d/6e/Hac84fRd_o.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://images2.imgbox.com/33/00/CmgVf6lI_o.jpg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://images2.imgbox.com/6c/c3/rZy5tq0s_o.jpg" alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <% end %>
</div>

<div class="container-fluid TC text-center bg-light">
  <div class="container">
    <div class="d-flex justify-content-center">
      <div class="col-sm-6 my-5">
        <h2><strong>牠牠 TATA</strong></h2>
        <br>
        <h5 class="text-muted">浪，我幫你說<br>體驗式生命教育</h5>
      </div>
    </div>
  </div>
</div>

<% if false %>
<div class="container TC">
  <br>
  <div class="d-flex justify-content-center">
    <%= render @posts %>
  </div>
</div>
<% end %>

<% if false %>
<div class="container TC">
  <br>
  <div class="d-flex justify-content-center">
    <%= render @products %>
  </div>
</div>
<% end %>


<div class="container-fluid TC slider-bg">
  <div class="container TC">
    <br>
    <div class="row slider-responsive">
      <%= render @posts %>
    </div>
  </div>
</div>
