<div class="col-sm-6 col-lg-4 text-center mt-3 mb-2">
  <%= link_to product_path(product) do %>
    <img class="card-img" src=<%= product[:image_url] %> alt="Card image cap">
  <% end %>
  <div class="card-body">
    <% if author_signed_in? %>
      <div>
        <%= link_to "Edit", edit_product_path(product), class: "btn btn-primary" %>
        <%= link_to "Delete", product_path(product), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </div>
</div>
