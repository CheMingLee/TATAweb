<div class="container TC mt-5">
  <br>
  <h3>新增產品</h3>
  <div class="row mb-3">
    <%= form_for @product, method: :post do |f|%>
      <%= f.label :name, "名稱" %>
      <%= f.text_field :name %><br />

      <%= f.label :description, "敘述" %>
      <%= f.text_field :description %><br />

      <%= f.label :image_url, "圖片連結" %>
      <%= f.text_field :image_url %><br />

      <%= f.label :price, "價格" %>
      <%= f.number_field :price %><br />

      <%= f.submit "新增" %>
    <% end %>
  </div>
</div>
