  <body>
    <%= render 'layouts/nav' %>
    <div class="container <%= controller_name %> <%= action_name %>"></div>
    <%= yield %>
    <%= render 'layouts/footer' %>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
  </body>
</html>
